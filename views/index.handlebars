<h1>Cats!</h1>

<h2>burgers eaten!</h2>

<ul>
  {{#each burger}}
    {{#unless eaten}}
      {{> burger/burger-block eaten=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>burgers not eaten !</h2>

<ul>
  {{#each burger}}
    {{#if eaten}}
      {{> burger/burger-block eaten=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>


  <button type="submit">Add Cat</button>
</form>
